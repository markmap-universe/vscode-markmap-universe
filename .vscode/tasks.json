// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "npm: dev",
            "type": "shell",
            "command": "pnpm dev",
            "isBackground": true,
            "problemMatcher": [
                {
                    "owner": "vscode-extension",
                    "pattern": [
                        {
                            "regexp": "^$",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": "Build start",
                        "endsPattern": "(B|Reb)uild complete|Rebuilt in"
                    }
                }
            ],
            "group": "build",
        }
    ]
}
