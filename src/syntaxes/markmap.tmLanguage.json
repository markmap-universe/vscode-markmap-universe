{
  "name": "markmap",
  "scopeName": "source.markmap",
  "patterns": [
    { "include": "#frontMatter" },
    { "include": "text.html.markdown" }
  ],
  "repository": {
    "frontMatter": {
      "begin": "^(-{3,})[ \\t]*$",
      "end": "^(-{3,}|\\.{3})[ \\t]*$",
      "beginCaptures": {
        "1": { "name": "punctuation.definition.tag.frontmatter" }
      },
      "endCaptures": {
        "1": { "name": "punctuation.definition.tag.frontmatter" }
      },
      "contentName": "meta.embedded.block.frontmatter",
      "patterns": [ { "include": "source.yaml" } ]
    }
  }
}
